{
  "ci": {
    "collect": {
      "settings": {
        "emulatedFormFactor": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.5 }],
        "categories:accessibility": ["error", { "minScore": 0.5 }],
        "categories:best-practices": ["error", { "minScore": 0.5 }],
        "categories:seo": ["error", { "minScore": 0.5 }],
        "resource-summary:document:size": [
          "error",
          { "maxNumericValue": 2000 }
        ],
        "resource-summary:stylesheet:size": ["error", { "maxNumericValue": 0 }],
        "resource-summary:font:size": ["error", { "maxNumericValue": 400 }],
        "resource-summary:third-party:count": [
          "error",
          { "maxNumericValue": 80 }
        ]
      }
    }
  }
}
